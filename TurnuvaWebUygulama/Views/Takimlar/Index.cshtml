
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<VeritabaniKatmani.Takimlar>


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Takımlar</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    @if (User.IsInRole("A") || User.IsInRole("Y"))
                    {
                        <li class="active">@Html.ActionLink("Takım Ekle", "Ekle", "Takimlar", new { @class = "btn btn-success btn-lg" })</li>
                    }
                    </ol>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Logo)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Adi)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.KategoriAdi)</th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Konum)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td><img src="~/Image/@Html.DisplayFor(modelItem => item.Logo)" width="25" height="25" /></td>
                            <td>@Html.DisplayFor(modelItem => item.Adi)</td>
                            <td>@Html.DisplayFor(modelItem => item.KategoriAdi)</td>
                            <td>@Html.DisplayFor(modelItem => item.Konum)</td>
                            <td>@Html.ActionLink("Detay", "Detay", "Takimlar", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })</td>
                            <td>@Html.ActionLink("Düzenle", "Duzenle", "Takimlar", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })</td>
                            <td>
                                @using (Html.BeginForm("Sil", "Takimlar", new { Id = item.Id }, FormMethod.Post))
                                {
                                    <button class="btn btn-danger btn-sm">Sil</button>
                                }

                            </td>


                        </tr>

                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

