@model VeritabaniKatmani.Kullanicilar
@{
    ViewBag.Title = "Ayarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Profilim</h1>
            </div>
        </div>
    </div>
</div>


<div class="col-md-4">
    <aside class="profile-nav alt">
        <section class="card">
            <div class="card-header user-header alt bg-dark">
                <div class="media">
                    <a href="#">
                        <img class="rounded-circle mx-auto d-block" src="~/Image/@Html.DisplayFor(model => model.Resim)" width="75%" height="75%" />
                    </a>
                    <div class="media-body">
                        <h2 class="text-light display-6">@Html.DisplayFor(model => model.AdiSoyadi)</h2>
                        <p>@Html.DisplayFor(model => model.RolAciklama)</p>
                    </div>
                </div>
            </div>


            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <i class="fa fa-map-marker"></i>Son Giriş Zamanı : @Html.DisplayFor(model => model.SonGirisZamani)
                </li>
   
            </ul>
        </section>
    </aside>

</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">

                    <hr>

                    @using (Html.BeginForm("ProfilDuzenle", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            <label for="Adi" class="control-label mb-1">Adı Soyadı</label>
                            @Html.TextBoxFor(m => m.AdiSoyadi, new { @id = "cc-name", @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="Adi" class="control-label mb-1">Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.KullaniciAdi, new { @id = "cc-name", @class = "form-control " })

                        </div>
                        <div class="form-group">
                            <label for="Adi" class="control-label mb-1">Parola</label>
                            @Html.PasswordFor(m => m.Parola, new { @id = "cc-name", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="file" class="control-label mb-1">Profil Resmi</label>
                            <input type="file" name="file" id="file-input" class="form-control-file" />

                        </div>
                        <div class="form-group">
                            <hr />
                        </div>

                        <div>
                            @if (@ViewBag.Basari == 1)
                            {
                                <div class="alert  alert-success alert-dismissible fade show" role="alert">
                                    <span class="badge badge-pill badge-success">Başarılı</span> Kullanıcı Kaydedildi.
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fa fa-dot-circle-o"></i> Kaydet
                            </button>
                            @Html.ActionLink("Profilim", "Home", "Profilim", null, new { @class = "btn btn-primary btn-lg" })
                        </div>
                    }
                </div>
            </div>

        </div>
    </div> <!-- .card -->

</div>