                        <a href="widgets.html"> <i class="menu-icon ti-book"></i>Kurallar </a>
                    </li>
                    @if (User.IsInRole("A") || User.IsInRole("Y") || User.IsInRole("H"))
                    {
                        <li>
                            <a href="widgets.html"> <i class="menu-icon ti-clipboard"></i>Raporlar </a>
                        </li>
                    }
                    @if (User.IsInRole("A"))
                    {
                        <li>
                            <a href="widgets.html"> <i class="menu-icon ti-settings"></i>Ayarlar </a>
                        </li>
                    }
