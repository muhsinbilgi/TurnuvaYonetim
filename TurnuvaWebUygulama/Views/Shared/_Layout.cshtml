                            {
                                <a class="nav-link" href="/Home/Ayarlar"><i class="fa fa-user"></i> Turnuva Seç </a>
                            }
                            <a class="nav-link" href="/Login/Logout"><i class="fa fa-power-off"></i> Çıkış</a>
                        </div>
                    </div>
                </div>

        </header><!-- /header -->
        <!-- Header-->


        @RenderBody()


    </div><!-- /#right-panel -->
