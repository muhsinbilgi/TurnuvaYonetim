                        </li>
                    }
                    @if (User.IsInRole("A") || User.IsInRole("Y") || User.IsInRole("T"))
                    {
                        <li>
                            <a href="/Takimlar"> <i class="menu-icon ti-shield"></i>Takımlar</a>
                        </li>
                    }
                    @if (User.IsInRole("A") || User.IsInRole("Y"))
                    {
                        <li>
                            <a href="/Gorevliler"> <i class="menu-icon ti-user"></i>Hakem & Görevli </a>
                        </li>
                    }
                    @if (User.IsInRole("A"))
                    {
                        <li>
                            <a href="/Turnuva"> <i class="menu-icon ti-user"></i>Turnuva</a>
                        </li>
                    }
                    @if (User.IsInRole("A") || User.IsInRole("Y"))
                    {
                        <li>
                            <a href="/Kullanicilar"> <i class="menu-icon ti-user"></i>Kullanıcı Tn.</a>
                        </li>
                    }
