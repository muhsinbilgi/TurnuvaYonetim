
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<VeritabaniKatmani.Gorevliler>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Takımlar</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">@Html.ActionLink("Görevli Ekle", "Ekle", "Gorevliler", new { @class = "btn btn-success btn-lg" })</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Adi) @Html.DisplayNameFor(model => model.Soyadi)</th>
                        <th scope="col">Görev Türü</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td><img src="~/Image/@Html.DisplayFor(modelItem => item.Resim)" width="25" height="25" /></td>
                            <td>@Html.DisplayFor(modelItem => item.Adi) @Html.DisplayFor(modelItem => item.Soyadi)</td>
                            <td>@Html.DisplayFor(modelItem => item.GorevAdi)</td>
                            <td align="right">@Html.ActionLink("Düzenle", "Duzenle", "Gorevliler", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })</td>
                            <td align="left">
                                @using (Html.BeginForm("Sil", "Gorevliler", new { Id = item.Id }, FormMethod.Post))
                                {
                                    <button class="btn btn-danger btn-sm">Sil</button>
                                }

                            </td>


                        </tr>

                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

