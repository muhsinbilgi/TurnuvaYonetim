
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VeritabaniKatmani.MacDetay

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Detay Ekle</h1>
            </div>
        </div>
    </div>

</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">

                    <hr>

                    @using (Html.BeginForm("DetayEkle", "Maclar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {


                <div class="form-group has-success">
                    <div class="form-group">
                        <label for="TakimId" class="control-label mb-1">Takım Seç</label>
                        @Html.DropDownListFor(m => m.TakimId, (List<SelectListItem>)ViewBag.tkm, new { @id = "select", @class = "form-control" })
                    </div>
                    <div class="form-group">
                      
                      
                    </div>
                    <div class="form-group">
                       
                      
                    </div>
                    <div class="form-group">
                        <label for="DetayDakika" class="control-label mb-1">Detay Dakika</label>
                        @Html.TextBoxFor(m => m.DetayDakika, new { @id = "cc-name", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <hr />
                    </div>

                    <div>
                        @if (@ViewBag.Basari == 1)
                        {
                            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                                <span class="badge badge-pill badge-success">Başarılı</span> Detay Kaydedildi.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                        }
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa fa-dot-circle-o"></i> Kaydet
                        </button>
                        @Html.ActionLink("Maçlar", "Index", "Maclar", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
                    }

                </div>

                </div>
            </div> <!-- .card -->


        </div>

