@model VeritabaniKatmani.Kurallar
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">

                    <hr>

                    @using (Html.BeginForm("Duzenle", "Kurallar", FormMethod.Post))
                    {

                        <div class="form-group">
                            <label for="KuralNo" class="control-label mb-1"> Kural Numarası</label>
                            @Html.EditorFor(model => model.KuralNo, new { htmlAttributes = new { @id = "cc-name", @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <label for="Kural" class="control-label mb-1">Kural</label>
                            @Html.EditorFor(model => model.Kural, new { htmlAttributes = new { @id = "cc-name", @class = "form-control" } })
                        </div>

        
                  
                        <div class="form-group">
                            <hr />
                        </div>

                        <div>
                            @if (@ViewBag.Basari == 1)
                            {
                                <div class="alert  alert-success alert-dismissible fade show" role="alert">
                                    <span class="badge badge-pill badge-success">Başarılı</span> Kural Güncellendi.
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                            }
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fa fa-dot-circle-o"></i> Kaydet
                            </button>
                            @Html.ActionLink("Kurallar", "Index", "Kurallar", null, new { @class = "btn btn-primary btn-lg" })
                        </div>
                    }
                </div>
            </div>

        </div>
    </div> <!-- .card -->

</div>

