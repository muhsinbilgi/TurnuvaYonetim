
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VeritabaniKatmani.Evrak

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Evrak Ekle</h1>
            </div>
        </div>
    </div>

</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">

                    <hr>

                    @using (Html.BeginForm("EvrakEkle", "Sporcular", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {


                <div class="form-group has-success">
                    <label for="Statu" class="control-label mb-1">Evrak Türü</label>
                    @Html.DropDownListFor(m => m.EvrakTuru, (List<SelectListItem>)ViewBag.dgr, new { @id = "select", @class = "form-control" })

                    <div class="form-group">
                        <label for="Evrak" class="control-label mb-1">Evrak Seç</label>
                        <input type="file" name="Evrak" id="file-input" class="form-control-file" />

                    </div>
                    <div class="form-group">
                        <hr />
                    </div>

                    <div>
                        @if (@ViewBag.Basari == 1)
                        {
                            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                                <span class="badge badge-pill badge-success">Başarılı</span> Evrak Kaydedildi.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                        }
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa fa-dot-circle-o"></i> Kaydet
                        </button>
                        @Html.ActionLink("Sporcular", "Index", "Sporcular", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
                            }
                       
                 </div>

                </div>
            </div> <!-- .card -->


        </div>

