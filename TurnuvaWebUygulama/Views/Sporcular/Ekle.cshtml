
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VeritabaniKatmani.Sporcular

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Sporcu Ekle</h1>
            </div>
        </div>
    </div>

</div>

<div class="col-lg-6">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                   
                        @if (@ViewBag.Basari == 1)
                        {
                    <div class="alert  alert-success alert-dismissible fade show" role="alert">
                        <span>Sporcunun panele girip evrak ve bilgilerini güncellemesi için giriş bilgilerini sporcu ile paylaşın.</span>
                        <br />
                        Kullanıcı Adı :<span>@ViewBag.KullaniciAdi</span>
                        <br />
                        Parola : <span>@ViewBag.Parola</span>
                        <br />
                        <span class="badge badge-pill badge-success">Başarılı</span> Sporcu Kaydedildi.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                        }

                   
                    <hr>

                    @using (Html.BeginForm("Ekle", "Sporcular", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            <label for="Adi" class="control-label mb-1">Sporcu Adı</label>
                            @Html.TextBoxFor(m => m.Adi, new { @id = "cc-name", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="Soyadi" class="control-label mb-1">Sporcu Soyadı</label>
                            @Html.TextBoxFor(m => m.Soyadi, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="DogumTarihi" class="control-label mb-1">Doğum Tarihi</label>
                            @Html.TextBoxFor(m => m.DogumTarihi, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="DogumYeri" class="control-label mb-1">Doğum Yeri</label>
                            @Html.TextBoxFor(m => m.DogumYeri, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Telefon" class="control-label mb-1">Telefon</label>
                            @Html.TextBoxFor(m => m.Telefon, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Email" class="control-label mb-1">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group has-success">
                            <label for="Statu" class="control-label mb-1">Statu</label>
                            @Html.DropDownListFor(m => m.Statu, (List<SelectListItem>)ViewBag.dgr, new { @id = "select", @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="Lisansno" class="control-label mb-1">Lisan No</label>
                            @Html.TextBoxFor(m => m.LisansNo, new { @id = "cc-name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Mevki" class="control-label mb-1">Mevki</label>
                            @Html.TextBoxFor(m => m.Mevki, new { @id = "cc-name", @class = "form-control" })
                        </div>


                        <div class="form-group">
                            <label for="file" class="control-label mb-1">Logo</label>
                            <input type="file" name="file" id="file-input" class="form-control-file" />

                        </div>
                        if (User.IsInRole("A") || User.IsInRole("Y"))
                        {
                            <div class="form-group has-success">
                                <label for="Statu" class="control-label mb-1">TakımId</label>
                                @Html.DropDownListFor(m => m.TakimId, (List<SelectListItem>)ViewBag.Takimlar, new { @id = "select", @class = "form-control" })

                            </div>
                        }
                            <div class="form-group">
                                <hr />
                            </div>

                            <div>
                                 <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fa fa-dot-circle-o"></i> Kaydet
                                </button>
                                @Html.ActionLink("Sporcular", "Index", "Sporcular", null, new { @class = "btn btn-primary btn-lg" })
                            </div>
                        }
                    </div>
            </div>

        </div>
    </div> <!-- .card -->

</div>

